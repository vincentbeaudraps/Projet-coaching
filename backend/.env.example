PORT=3001
NODE_ENV=development

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=coaching_db
DB_USER=postgres
DB_PASSWORD=postgres

# JWT
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRE=7d

# Email Notifications
# For Gmail: Enable "App Passwords" in Google Account settings
# For others: Use SMTP credentials from your email provider
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM="VB Coaching <noreply@vbcoaching.com>"

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:5173

# Redis (Optional - for advanced rate limiting)
# If not set, will fallback to in-memory rate limiting
REDIS_URL=redis://localhost:6379

# Sentry Error Monitoring (Optional)
# Sign up at https://sentry.io to get a DSN
SENTRY_DSN=
SENTRY_RELEASE=coaching-app@1.0.0

# WebSocket
WS_PORT=3002

# Encryption (for sensitive data)
ENCRYPTION_KEY=your-32-character-encryption-key

# CSRF Protection
CSRF_SECRET=your-csrf-secret-key-change-this

# === OAUTH PLATFORMS ===
# Obtenir les clés API sur les portails développeurs

# GARMIN CONNECT
# https://developer.garmin.com/
GARMIN_CLIENT_ID=your_garmin_client_id
GARMIN_CLIENT_SECRET=your_garmin_client_secret
GARMIN_REDIRECT_URI=http://localhost:3000/oauth/garmin/callback

# STRAVA
# https://www.strava.com/settings/api
STRAVA_CLIENT_ID=your_strava_client_id
STRAVA_CLIENT_SECRET=your_strava_client_secret
STRAVA_REDIRECT_URI=http://localhost:3000/oauth/strava/callback

# SUUNTO
# https://apizone.suunto.com/
SUUNTO_CLIENT_ID=your_suunto_client_id
SUUNTO_CLIENT_SECRET=your_suunto_client_secret
SUUNTO_REDIRECT_URI=http://localhost:3000/oauth/suunto/callback

# COROS
# https://open.coros.com/
COROS_CLIENT_ID=your_coros_client_id
COROS_CLIENT_SECRET=your_coros_client_secret
COROS_REDIRECT_URI=http://localhost:3000/oauth/coros/callback

# POLAR FLOW
# https://www.polar.com/accesslink-api/
POLAR_CLIENT_ID=your_polar_client_id
POLAR_CLIENT_SECRET=your_polar_client_secret
POLAR_REDIRECT_URI=http://localhost:3000/oauth/polar/callback

# DECATHLON COACH
# https://developers.decathlon.com/
DECATHLON_CLIENT_ID=your_decathlon_client_id
DECATHLON_CLIENT_SECRET=your_decathlon_client_secret
DECATHLON_REDIRECT_URI=http://localhost:3000/oauth/decathlon/callback
